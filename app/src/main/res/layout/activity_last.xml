<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Last"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:width="96sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e62e00"
            android:text="red"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:height="250sp"
            android:gravity="center_horizontal"

            />
        <Button
            android:width="96sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00e600"
            android:text="green"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:height="250sp"
            android:gravity="center_horizontal"
            />
        <Button
            android:width="96sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1a1aff"
            android:text="blue"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:height="250sp"
            android:gravity="center_horizontal"
            />
        <Button
            android:width="96sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e6e600"
            android:text="yellow"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:height="250sp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baris Satu"
        android:textSize="40sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Baris Dua"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baris Tiga"
        android:textAllCaps="false"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baris Empat"
        android:textSize="40sp"/>

</LinearLayout>